# Application Settings
APP_NAME=BookVoice
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security (IMPORTANT: Generate a secure random key for production)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
# For development (SQLite)
# DATABASE_URL=sqlite:///./bookvoice.db

# For production (PostgreSQL)
DATABASE_URL=postgresql://bookvoice_user:password@localhost:5432/bookvoice_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_EXPIRE=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Upload Settings
UPLOAD_DIR=./uploads
AUDIO_DIR=./app/static/audio
MAX_UPLOAD_SIZE=52428800
# Note: ALLOWED_EXTENSIONS is set in code as a set

# Text-to-Speech Configuration
TTS_ENGINE=gtts
TTS_LANGUAGE=en
TTS_CHUNK_SIZE=5000
TTS_MAX_CHARS=500000

# AWS Configuration (Optional - for AWS Polly)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log